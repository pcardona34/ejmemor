<div class="w3-container">

	<div class="w3-card-4">
		<div class="w3-container w3-padding analogue">
			<h3>{{titre}}</h3>
		</div>
	</div>

	<div class="w3-center" id="info-cartes">
		<span id="nombre">{{cartes}}</span> carte(s) à mémoriser
	</div>

<div class="w3-bar">
		<button title="Je ne le sais pas encore!" onclick="exercice.jenelesaispasencore()"
		class="w3-bar-item w3-button w3-red reaction">
		<b><i class='icon-fermer'></i></b>
		</button>

		<button title="Retourner la carte" onclick="exercice.retourner()"
		class="w3-bar-item w3-button w3-teal" id="retourner">
		<i class='icon-voir'></i>
		</button>

		<button title="Je le sais déjà!" onclick="exercice.jelesaisdeja()"
		class="w3-bar-item w3-button w3-green reaction">
		<i class='icon-finir'></i>
		</button>
</div>


	<!-- <div class="w3-card-4"> -->
		<div id="boite" class="w3-container w3-padding w3-center blanc">
		<div id="actions" class="w3-center">
			<button title="Cliquez sur la pile pour commencer." onclick="exercice.commencer()">
			<img src="./static/images/exercice/deck.png" alt="Pile" width="50%" height="auto" />
			Commencer...
			</button>
		</div>
		</div>
	<!-- </div> -->	

</div>
